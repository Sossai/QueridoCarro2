<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.dev42.queridocarro.fragments.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_location_128_black"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/id_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_estado"
            android:gravity="center"
            android:focusable="false"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <EditText
            android:id="@+id/id_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cidade"
            android:gravity="center"
            android:focusable="false"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <include layout="@layout/frame_load"
        android:id="@+id/frameload"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
