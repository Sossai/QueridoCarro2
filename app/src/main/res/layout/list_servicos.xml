<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBranco"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_check_servico"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_check_48_green"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_servico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alinhamento"
        android:layout_toRightOf="@id/iv_check_servico"
        android:textColor="@color/colorCinzaEscuro"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>
